<Window x:Class="JournalUI.AddJournalEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Journal Entry" Height="500" Width="900" Background="#F5F5F5">
    <Grid>
        <Border Background="White" Padding="20" CornerRadius="10" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Add Journal Entry" FontSize="20" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Journal Number:"/>
                        <TextBox x:Name="txtJournalNumber" Height="30"/>

                        <TextBlock Text="Journal Type:" Margin="0,10,0,0"/>
                        <ComboBox x:Name="cmbJournalType" Height="30">
                            <ComboBoxItem Content="Type 1"/>
                            <ComboBoxItem Content="Type 2"/>
                        </ComboBox>

                        <TextBlock Text="Posting Date:" Margin="0,10,0,0"/>
                        <DatePicker x:Name="dpPostingDate" Height="30"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Period:"/>
                        <ComboBox x:Name="cmbPeriod" Height="30">
                            <ComboBoxItem Content="Q1"/>
                            <ComboBoxItem Content="Q2"/>
                        </ComboBox>

                        <TextBlock Text="Document Date:" Margin="0,10,0,0"/>
                        <DatePicker x:Name="dpDocumentDate" Height="30"/>

                        <TextBlock Text="Currency:" Margin="0,10,0,0"/>
                        <ComboBox x:Name="cmbCurrency" Height="30">
                            <ComboBoxItem Content="USD"/>
                            <ComboBoxItem Content="EUR"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
                <!-- Inside Grid.Row="2" (AddJournalEntryWindow.xaml) -->
                <DataGrid x:Name="dgJournalLines" 
          Grid.Row="2" 
          Margin="0,20,0,0" 
          AutoGenerateColumns="False" 
          CanUserAddRows="True"
          ItemsSource="{Binding JournalLines}">
                    <DataGrid.Columns>
                        <DataGridComboBoxColumn Header="Account" 
                                SelectedItemBinding="{Binding AccountId}"
                                DisplayMemberPath="Name"
                                ItemsSource="{Binding DataContext.Accounts, RelativeSource={RelativeSource AncestorType=Window}}"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                        <DataGridTextColumn Header="Reference" Binding="{Binding Reference}"/>
                        <DataGridComboBoxColumn Header="Dimension" 
                                SelectedItemBinding="{Binding DimensionId}"
                                DisplayMemberPath="Name"
                                ItemsSource="{Binding DataContext.Dimensions, RelativeSource={RelativeSource AncestorType=Window}}"/>
                        <DataGridComboBoxColumn Header="Cost Center" 
                                SelectedItemBinding="{Binding CostCenterId}"
                                DisplayMemberPath="Name"
                                ItemsSource="{Binding DataContext.CostCenters, RelativeSource={RelativeSource AncestorType=Window}}"/>
                        <DataGridTextColumn Header="Debit" Binding="{Binding Debit}"/>
                        <DataGridTextColumn Header="Credit" Binding="{Binding Credit}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Buttons -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Save" Width="100" Height="30" Background="#007ACC" Foreground="White" Click="Save_Click"/>
                    <Button Content="Cancel" Width="100" Height="30" Background="Gray" Foreground="White" Margin="10,0,0,0" Click="Cancel_Click"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
