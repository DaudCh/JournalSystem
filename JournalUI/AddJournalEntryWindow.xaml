<Window x:Class="JournalUI.AddJournalEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Journal Entry" Height="700" Width="1000">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Journal Header -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <WrapPanel Margin="0,5">
                <Label Content="Journal Number" Width="120"/>
                <TextBox x:Name="txtJournalNumber" Width="150"/>
                <Label Content="Journal Type" Width="120" Margin="20,0,0,0"/>
                <ComboBox x:Name="cmbJournalType" Width="150" ItemsSource="{Binding JournalTypes}"/>
                <Label Content="Status" Width="120" Margin="20,0,0,0"/>
                <ComboBox x:Name="cmbStatus" Width="150" ItemsSource="{Binding Statuses}"/>
            </WrapPanel>
            <WrapPanel Margin="0,5">
                <Label Content="Period" Width="120"/>
                <ComboBox x:Name="cmbPeriod" Width="150" ItemsSource="{Binding Periods}"/>
                <Label Content="Posting Date" Width="120" Margin="20,0,0,0"/>
                <DatePicker x:Name="dpPostingDate" Width="150"/>
                <Label Content="Document Date" Width="120" Margin="20,0,0,0"/>
                <DatePicker x:Name="dpDocumentDate" Width="150"/>
            </WrapPanel>
            <WrapPanel Margin="0,5">
                <Label Content="Currency" Width="120"/>
                <ComboBox x:Name="cmbCurrency" Width="150" 
          ItemsSource="{Binding Currencies}" 
          DisplayMemberPath="Name" 
          SelectedValuePath="Id"/>

                <Label Content="Exchange Rate" Width="120" Margin="20,0,0,0"/>
                <TextBox x:Name="txtExchangeRate" Width="150"/>
            </WrapPanel>
        </StackPanel>

      <GroupBox Header="Journal Lines" Grid.Row="1">
            <DockPanel>
                <DataGrid ItemsSource="{Binding JournalLines}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,5">
                    <DataGrid.Columns>
                        
                     
                        <DataGridTemplateColumn Header="Account">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.Account, RelativeSource={RelativeSource AncestorType=Window}}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding AccountId, Mode=TwoWay, ValidatesOnExceptions=True}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        
                        <DataGridTemplateColumn Header="Cost Center">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.CostCenter, RelativeSource={RelativeSource AncestorType=Window}}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding CostCenterId, Mode=TwoWay, ValidatesOnExceptions=True}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                   
                        <DataGridTemplateColumn Header="Dimension">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.Dimensions, RelativeSource={RelativeSource AncestorType=Window}}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      SelectedValue="{Binding DimensionId, Mode=TwoWay, ValidatesOnExceptions=True}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                       
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="150"/>
                        <DataGridTextColumn Header="Reference" Binding="{Binding Reference}" Width="100"/>
                        <DataGridTextColumn Header="Debit" Binding="{Binding Debit}" Width="80"/>
                        <DataGridTextColumn Header="Credit" Binding="{Binding Credit}" Width="80"/>

                        <DataGridTemplateColumn Header="Bin" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🗑️" 
                            Click="Button_Click_1" 
                            Background="Transparent" 
                            BorderThickness="0"
                            ToolTip="Delete Line"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>

       
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add Line" Width="100" Margin="0,0,10,0" Click="Button_Click"/>
            <Button Content="Save" Width="100" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
